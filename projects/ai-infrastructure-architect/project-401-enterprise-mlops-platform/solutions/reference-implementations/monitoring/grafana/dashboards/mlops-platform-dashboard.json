{
  "dashboard": {
    "title": "MLOps Platform Overview",
    "tags": ["mlops", "platform", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Platform Health Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=~\"mlflow|kserve-models|platform-api\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
              {"type": "value", "value": "1", "text": "UP", "color": "green"}
            ],
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Total Models in Production",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "count(kube_pod_labels{label_serving_kserve_io_inferenceservice!=\"\"})",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "horizontal"
        }
      },
      {
        "id": 3,
        "title": "Total Predictions Today",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(http_requests_total{job=\"kserve-models\"}[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "id": 4,
        "title": "Estimated Daily Cost",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(aws_billing_estimated_charges_usd[1d])) * 24",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 800, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Model Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"kserve-models\"}[5m])) by (model_name)",
            "legendFormat": "{{model_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "rightSide": false}
      },
      {
        "id": 6,
        "title": "Model Latency (P95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"kserve-models\"}[5m])) by (model_name, le))",
            "legendFormat": "{{model_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [1], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "name": "Model Latency Alert",
          "notifications": []
        }
      },
      {
        "id": 7,
        "title": "Model Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"kserve-models\",status=~\"5..\"}[5m])) by (model_name) / sum(rate(http_requests_total{job=\"kserve-models\"}[5m])) by (model_name)",
            "legendFormat": "{{model_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Error Rate", "max": 0.1},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 0.01, "colorMode": "custom", "fill": false, "line": true, "op": "gt", "lineColor": "orange"},
          {"value": 0.05, "colorMode": "custom", "fill": false, "line": true, "op": "gt", "lineColor": "red"}
        ]
      },
      {
        "id": 8,
        "title": "Infrastructure CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU Usage", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Infrastructure Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory Usage", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "GPU Utilization",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "DCGM_FI_DEV_GPU_UTIL",
            "legendFormat": "GPU {{gpu}} on {{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "GPU Utilization", "max": 100},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 30, "colorMode": "custom", "fill": false, "line": true, "op": "lt", "lineColor": "orange"}
        ]
      },
      {
        "id": 11,
        "title": "MLflow Operations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "rate(mlflow_requests_total[5m])",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Cost by Service (Last 7 Days)",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "sum(increase(aws_billing_estimated_charges_usd[7d])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"display": true, "placement": "right"},
          "pieType": "donut"
        }
      },
      {
        "id": 13,
        "title": "Active Kubernetes Pods by Namespace",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Running\"}) by (namespace)",
            "legendFormat": "{{namespace}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 14,
        "title": "Data Quality Scores",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36},
        "targets": [
          {
            "expr": "data_quality_score",
            "legendFormat": "{{dataset}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Quality Score", "min": 0, "max": 1},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 0.90, "colorMode": "custom", "fill": false, "line": true, "op": "lt", "lineColor": "red"}
        ]
      },
      {
        "id": 15,
        "title": "Recent Alerts (Last Hour)",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "indexByName": {
                "alertname": 0,
                "severity": 1,
                "component": 2,
                "description": 3
              }
            }
          }
        ]
      }
    ],
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "refresh": "30s",
    "schemaVersion": 38,
    "version": 1
  }
}
